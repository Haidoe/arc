generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  externalId  String       @unique
  created     DateTime     @default(now())
  email       String       @unique
  name        String?
  company     String?
  title       String?
  // productions UserProductions[]
  productionIds String[]
}

